0@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>

<html class="" xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Hotel - @ViewData["Title"]</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/AdminLTE.css" rel="stylesheet" type="text/css" />
    <style>
        .bg-custom-light {
            background-color: #f4f4f4;
        }

        .mt-5 {
            margin-top: 2.5rem !important;
        }

        .custom-color{
            background-color: #3c8dbc !important;
        }

        .custom-input{
            /*width: 100%;
            padding: 12px;*/
            border: 1px solid #ccc !important;
            border-radius: 4px !important;
            /*resize: vertical;*/
        }
    </style>
</head>
<body class="">
    <form method="post" asp-controller="Usuario" asp-action="Login" id="frm">
        <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
        <div class="form-box" id="login-box">

            <div class="header custom-color">Iniciar Sesion</div>
            <div class="body bg-light">
                <div class="form-group">
                    <input 000type="text" class="form-control custom-input" name="userName" placeholder="Nombre de Usuario" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control custom-input" name="password" placeholder="Contraseña" />
                </div>
            </div>

            <div class="footer bg-gray">
                <button class="btn bg-olive btn-block custom-color" type="submit" form="frm">Iniciar Sesión</button>
            </div>
            @if (ViewData["LoginMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible mt-5" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @ViewData["LoginMessage"].ToString()
                </div>
            }

            @if (TempData["Session"] != null)
            {
                <div class="alert alert-warning alert-dismissible mt-5" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @TempData["Session"].ToString()
                </div>
            }
        </div>

    </form>
    <!--Eventos-->
    <script src="~/js/jquery-3.1.0.min.js"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>
