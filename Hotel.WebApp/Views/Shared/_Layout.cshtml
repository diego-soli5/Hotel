<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Hotel - @ViewData["Title"]</title>

    <!--Meta viewport: para usar en moviles y demás devices-->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximun-scale=1, user-scalable=no" />
    <!--toastr-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <!--bootstrap-->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!--fontawesome-->
    <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!--estilo que descargamos-->
    <link href="~/css/AdminLTE.css" rel="stylesheet" type="text/css" />

    <!--Esto es para reiniciar todo el diseño y asi se apliquen bien los estilos-->
    <style>
        html, body {
            min-height: 100%;
            padding: 0;
            magin: 0;
            font-family: "Source Sans Pro", "Helvetica Neve", Helvetica, Arial;
        }

        iframe {
            display: block;
            overflow: auto;
            border: 0;
            margin: 0 auto;
            padding: 0;
        }

        .frame {
            height: 48px;
            margin: 0;
            padding: 0;
            border-bottom: 1px solid #ddd;
        }

            .frame a {
                color: #666;
            }

                .frame a:hover {
                    color: #222;
                }

            .frame .buttons a {
                height: 49px;
                line-height: 49px;
                display: inline-block;
                text-align: center;
                width: 50px;
                border-left: 1px solid #ddd;
            }

            .frame .brand {
                color: #444 font-size: 20px;
                line-height: 49px;
                display: inline-block;
                padding-left: 10px
            }

                .frame .brand small {
                    font-size: 14px;
                }

        a, a:hover {
            text-decoration: none;
        }

        .container-fluid {
            padding: 0;
            margin: 0;
        }

        .text-muted {
            color: #999;
        }

        .ad {
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            backgroud: #222;
            backgroud: rgba(0,0,0,0,8);
            width: 100%;
            color: #fff;
            display: none;
        }

        #close-ad {
            float: left;
            margin-left: 10px;
            margin-top: 10px;
            cursor: pointer;
        }

        /*Elimina problema que se ve pequeño*/
        .swal2-popup {
            font-size: 1.6rem !important;
        }
    </style>

</head>
<body class="skin-blue">
    @using System.Security.Claims
    @{
        string fullName = User.FindFirst(ClaimTypes.Name).Value;
    }
    <header class="header">
        <!--header para tener como una barra superior-->
        <a asp-controller="Home" asp-action="index" class="logo">Hotel</a>
        <nav class="navbar navbar-static-top" role="navigation">
            <!--Nav es como una etiqueta para la parte de navegacion del sitio-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <!--este href nos va servir para esconder los botones de navegacion-->
                <span class="sr-only">Toggle Navigation</span><!--se ponen estos span para hacer las lineas de la "hamburguesa"-->
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
        </nav>
    </header>

    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!--wrapper es como un contenedor-->
        <aside class="left-side sidebar-offcanvas">
            <!--este aside es como para ponerle un diseño de una barra lateral-->
            <section class="sidebar">
                <!--section para contener un conjunto de items-->
                <div class="user-panel">
                    <div class="pull-left image">
                        <!--esto es bootstrap y tira todo a la izquierda, es imagen, el de abajo es informativo-->
                        <img src="~/img/avatar9.jpg" class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p><label>@fullName</label></p>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li id="liHome">
                        <a asp-controller="Home" asp-action="Index">
                            <i class="fa fa-dashboard"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li id="liReservacion">
                        <a asp-controller="Reservacion" asp-action="Index">
                            <i class="fa fa-th"></i>
                            <span>Reservaciones</span>
                        </a>
                    </li>
                    <li id="liCliente">
                        <a asp-controller="Cliente" asp-action="Index">
                            <i class="fa fa-th"></i>
                            <span>Clientes</span>
                        </a>
                    </li>
                    <li id="liHabitacion">
                        <a asp-controller="Habitacion" asp-action="Index">
                            <i class="fa fa-th"></i>
                            <span>Habitaciones</span>
                        </a>
                    </li>
                    <li id="liTipoHabitacion">
                        <a asp-controller="TipoHabitacion" asp-action="Index">
                            <i class="fa fa-th"></i>
                            <span>Tipos de Habitaciones</span>
                        </a>
                    </li>
                    <li id="liUsuario">
                        <a asp-controller="Usuario" asp-action="Index">
                            <i class="fa fa-th"></i>
                            <span>Usuarios</span>
                        </a>
                    </li>
                    <li id="liUsuario">
                        <a asp-controller="Usuario" asp-action="Logout">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            <span>Salir</span>
                        </a>
                    </li>
                </ul>
            </section>
        </aside>
        <aside class="right-side">
            <section class="content-header">
                <!--Contenido de la cabecera-->
                <h1>
                    @ViewData["Title"]<!--Para cambiar el nombre de la opcion del menu en la que estamos-->
                </h1>
            </section>

            <!--AQUI CARGA LOS VIEWS-->
            <section class="content">
                @RenderBody()
            </section>
        </aside>
    </div><!--FIN WRAPPER-->
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.ui.draggable.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/AdminLTE/app.js" type="text/javascript"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @{
        string item = "";

        if (ViewData["Title"] == "Inicio")
        {
            item = "liHome";
        }
        else if (ViewData["Title"] == "Clientes")
        {
            item = "liCliente";
        }
        else if (ViewData["Title"] == "Habitaciones")
        {
            item = "liHabitacion";
        }
        else if (ViewData["Title"] == "Tipos de Habitacion")
        {
            item = "liTipoHabitacion";
        }
        else if (ViewData["Title"] == "Usuarios")
        {
            item = "liUsuario";
        }
        else if (ViewData["Title"] == "Reservaciones")
        {
            item = "liReservacion";
        }

        <script>
            document.querySelector("#@item").classList.add('active');
        </script>
    }
</body>
</html>