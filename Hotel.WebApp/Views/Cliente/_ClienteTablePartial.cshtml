@model List<Hotel.WebApp.Models.Cliente.ClienteDTO>

<table class="table" id="tableData">
    <thead>
        <tr>
            <td class="text-bold">Id</td>
            <td class="text-bold">Nombre</td>
            <td class="text-bold">Primer Apellido</td>
            <td class="text-bold">Segundo Apellido</td>
            <td class="text-bold">Número de Telefono</td>
            <td class="text-bold">Correo Electrónico</td>
            <td class="text-bold">Acciones</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.TcNombre</td>
                    <td>@cliente.TcAp1</td>
                    <td>@cliente.TcAp2</td>
                    <td>@cliente.TcNumTelefono</td>
                    <td>@cliente.TcCorreoElectronico</td>
                    <td>

                        <a asp-controller="Cliente"
                           asp-action="Editar"
                           asp-route-id="@cliente.Id"
                           class="btn btn-sm btn-success text-center">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>

                        <a asp-controller="Cliente"
                           asp-action="Eliminar"
                           asp-route-id="@cliente.Id"
                           id="btnDelete"
                           class="btn btn-sm btn-danger text-center">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center"><span class="text-danger">No hay registros disponibles.</span></td>
            </tr>
        }
    </tbody>
</table>