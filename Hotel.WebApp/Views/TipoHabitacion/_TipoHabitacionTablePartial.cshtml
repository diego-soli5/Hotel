@model List<Hotel.WebApp.Models.TipoHabitacion.TipoHabitacionDTO>

<table class="table" id="tableData">
    <thead>
        <tr>
            <td class="text-bold">Id</td>
            <td class="text-bold">Nombre</td>
            <td class="text-bold">Acciones</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var tipoHabitacion in Model)
            {
                <tr>
                    <td>@tipoHabitacion.Id</td>
                    <td>@tipoHabitacion.TcNomTipoHabitacion</td>
                    <td>

                        <a asp-controller="TipoHabitacion"
                           asp-action="Editar"
                           asp-route-id="@tipoHabitacion.Id"
                           class="btn btn-sm btn-success text-center">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>

                        <a asp-controller="TipoHabitacion"
                           asp-action="Eliminar"
                           asp-route-id="@tipoHabitacion.Id"
                           id="btnDelete"
                           class="btn btn-sm btn-danger text-center">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center"><span class="text-danger">No hay registros disponibles.</span></td>
            </tr>
        }
    </tbody>
</table>